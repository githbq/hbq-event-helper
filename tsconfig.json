{
    "compilerOptions": {
        "target": "es5",
        "module": "UMD",
        "moduleResolution": "Classic",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "lib": ["es2017"],
        "typeRoots": ["node_modules/@types"],
        "types": [ 
            "node" 
        ],
        "outDir": "./build",
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts",
        "temp"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}